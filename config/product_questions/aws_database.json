{
  "type": "object",
  "title": "AWS Fog Databases",
  "description": "AWS Fog Databases",
  "required": ["DBInstanceClass", "Engine", "AllocatedStorage"],
  "properties": {
    "DBInstanceClass": {
      "title": "DB Instance Size",
      "type": "string",
      "enum": [
        "db.m3.medium",
        "db.m3.large",
        "db.m3.xlarge"
      ],
      "default": "db.m3.medium"
    },
    "Engine": {
      "title": "DB Engine",
      "type": "string",
      "enum": [
        "aurora",
        "mysql",
        "postgresql",
        "sqlserver"
      ]
    },
    "AllocatedStorage": {
      "title": "Disk Size",
      "type": "string",
      "default": "40"
    },
    "StorageType": {
      "title": "Storage Type",
      "type": "string",
      "enum": [
        "ssd",
        "standard",
        "gp2",
        "io1"
      ],
      "default": "ssd"
    },
    "availability": {
      "title": "Storage Redundancy",
      "type": "string",
      "enum": [
        "normal",
        "reduced"
      ],
      "default": "normal"
    }
  }
}
